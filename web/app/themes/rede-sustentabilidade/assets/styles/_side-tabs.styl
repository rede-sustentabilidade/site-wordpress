.side-tabs
  position: absolute
  z-index: 4
  width: 406px
  height: 100%
  left: 0
  -moz-transition:    left 2s
  -webkit-transition: left 2s
  -o-transition:      left 2s
  transition:         left 2s

  &.close
    left: -367px

    .tabs
      background-repeat: no-repeat
      background-image: url("assets/images/tabs-inative.png") !important

  &.faq-active

    .content

      .faq
        display: block

      .sugestions
        display: none

    .tabs
      background-repeat: no-repeat
      background-image: url("assets/images/tabs-faq-active.png")

  &.sugestions-active

    .content

      .faq
        display: none

      .sugestions
        display: block

    .tabs
      background-repeat: no-repeat
      background-image: url("assets/images/tabs-sugestions-active.png")

  .tabs
    position: relative
    float: left
    width: 38px
    height: 202px
    margin-top: 288px
    z-index: 2
    cursor: pointer

    .tabs-faq
      display: block
      width: 38px
      height: 91px

    .tabs-sugestions
      display: block
      width: 38px
      height: 110px


  .content
    position: relative
    float: left
    width: 350px
    height: 100%
    padding: 0 15px 46px 2px
    background-color: #e05825
    //background-color: #d55626
    box-shadow:         5px 1px 17px rgba(214, 214, 214, 0.5)
    -moz-box-shadow:    5px 1px 17px rgba(214, 214, 214, 0.5)
    -o-box-shadow:      5px 1px 17px rgba(214, 214, 214, 0.5)
    -webkit-box-shadow: 5px 1px 17px rgba(214, 214, 214, 0.5)

    .faq
      position: relative
      padding-top: 46px

      .item
        margin-bottom: 13px
        overflow: hidden

        &.open

          .question
            background-image: url("assets/images/tabs-arrow-down.png")

          .answer
            display: block


      .question
        color: #fff
        font-weight: bold
        font-size: 14px
        padding-left: 31px
        background-repeat: no-repeat
        background-image: url("assets/images/tabs-arrow-right.png")
        background-position: 15px 4px
        cursor: pointer

      .answer
        display: none

        p
          padding: 13px 5px 10px 31px
          color: #873414
          font-size: 15px
          line-height: 18px

    .sugestions
      position: relative
      padding: 30px 15px 30px 48px

      p
        color: #FFF
        font-size: 15px

      form
        padding-top: 7px
        display: block
        min-height: 40px

        p
          color: #FFF
          font-size: 15px

        fieldset
          margin-bottom: 5px

        input[type=text],
        textarea
          width: 92%
          font-size: 16px
          line-height: 18px
          border: 0
          padding: 11px 12px
          border-radius: 5px

          &.error
            border: 1px solid red

  .btn-side-tabs
    position: absolute
    right: -7px
    top: 10px
    display: block
    vertical-align: middle
    width: 30px
    height: 30px
    z-index: 5
    line-height: 30px
    text-align: center
    cursor: pointer








