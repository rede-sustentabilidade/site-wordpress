/******************** BANNER ************************/

.banner-featured
  display: block
  position: relative
  padding: 80px 0
  width: 100%
  float: left
  background: #267e6e
  background: 50px 60px url("assets/images/marca-dagua-rede.png") no-repeat #267e6e
  background: 50px 60px url("assets/images/marca-dagua-rede.png") no-repeat, -moz-linear-gradient(top, #267e6e 0%, #38af9b 100%)
  background: 50px 60px url("assets/images/marca-dagua-rede.png") no-repeat, -webkit-gradient(linear, left top, left bottom, color-stop(0%, #267e6e), color-stop(100%, #38af9b))
  background: 50px 60px url("assets/images/marca-dagua-rede.png") no-repeat, -webkit-linear-gradient(top, #267e6e 0%, #38af9b 100%)
  background: 50px 60px url("assets/images/marca-dagua-rede.png") no-repeat, -o-linear-gradient(top, #267e6e 0%, #38af9b 100%)
  background: 50px 60px url("assets/images/marca-dagua-rede.png") no-repeat, -ms-linear-gradient(top, #267e6e 0%, #38af9b 100%)
  background: 50px 60px url("assets/images/marca-dagua-rede.png") no-repeat, linear-gradient(to bottom, #267e6e 0%, #38af9b 100%)
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#267e6e', endColorstr='#38af9b',GradientType=0 )
  h2,h3
    font-family: 'League Gothic'
    font-size: 46px
    line-height: 46px
    color: #333
    text-align: center
    margin: 0 20px
    font-style: normal
  h3
    font-size: 48px
    color: #fff
    line-height: 48px
    margin-top: 10px
  .conexao-opcoes
    text-align: center
    padding: 25px 0 0
    a
      text-decoration: none
      color: #fff
      font-family: 'PT Sans', sans-serif
      font-size: 13px
      width: 90px
      height: 120px
      text-transform: uppercase
      text-align: center
      display: inline-block
      margin: 0 10px 0 0
      i
        display: inline-block
        border-radius: 50px
        border: 3px solid #fff
        padding: 14px
        font-size: 55px
        line-height: 55px
        //color: #621e0c;
      span
        padding: 5px 0 0 0
        display: inline-block
  .close
    position: absolute
    top: 0
    right: 0
    margin: 15px
    color: #fff
    font-size: 18px
    line-height: 15px
    text-decoration: none
  &.lightbox
    border-radius: 20px
  &.fixed
    h3
      font-size: 7em
      line-height: 1.3em
    background: #267e6e
