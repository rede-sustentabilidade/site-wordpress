    .conexao-opcoes
      a
        width: auto
        height: auto
        border: 8px solid #d55626
        background-color: #fff
        color: #d55626
        font-family: 'League Gothic'
        font-size: 4.5em
        padding: .35em
        text-transform: capitalize
        border-radius: 15px
        &:hover
          box-shadow: 4px 4px 7px 1px rgba(0, 0, 0, 0.33)
        i
          margin: 0 15px 0 0
          padding: 0
          border: 0
          font-size: 35px
          line-height: 45px
