  .banner-botao
    a
      display: inline-block
      margin: .5em 0 0 0
      width: auto
      height: auto
      //border: 5px solid #D89200
      background-color: #fff
      color: #e3c492
      font-family: 'League Gothic'
      font-size: 3em
      line-height: 1em
      padding: .5em .3em
      text-transform: none
      border-radius: 10px
      text-decoration: none
      box-shadow: 2px 2px 6px 3px rgba(0, 0, 0, 0.33)
      &:hover
        //border: 5px solid #2F9D8A
        background-color: #e3c492
        color: #fff
      i
        font-size: 24px
        line-height: 24px
        margin: 0 10px 0 0
        vertical-align: middle

  .link-artigo
    position: absolute
    right: 3%
