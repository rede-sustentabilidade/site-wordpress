@charset "utf-8"

/* -- Region colors -- */


/* Amazonas, Bahia, Maranhão, Minas Gerais, Pará, Paraíba, Rio Grande do Sul, Santa Catarina, São Paulo */
$region_color_a: #c40008

/* Acre, Amapá, Ceará, Distrito Federal, Goiás, Paraná, Rio Grande do Norte, Roraima, Sergipe */
$region_color_b: #00923f

/* Alagoas, Espírito Santo, Mato Grosso do Sul, Rio de Janeiro */
$region_color_c: #0077b9

/* Mato Grosso, Pernambuco, Piauí, Rondônia, Tocantins */
$region_color_d: #1946b4

.term-am,
.term-ba,
.term-ma,
.term-mg,
.term-pa,
.term-pb,
.term-rs,
.term-sc,
.term-sp
  .type-post .category a
    color: $region_color_a

.term-ac,
.term-ap,
.term-ce,
.term-df,
.term-go,
.term-pr,
.term-rn,
.term-rr,
.term-se
  .type-post .category a
    color: $region_color_b

.term-al,
.term-es,
.term-ms,
.term-rj
  .type-post .category a
    color: $region_color_c

.term-mt,
.term-pe,
.term-pi,
.term-ro,
.term-to
  .type-post .category a
    color: $region_color_d

