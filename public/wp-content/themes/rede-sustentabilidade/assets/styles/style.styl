@import _pure

@import _pinbin

@import "../fonts/_stylesheet"

@import "../fonts/icones/_style"

@import _animation

@import _magnific-popup

html
  box-sizing: border-box
  *, *:before, *:after
    box-sizing: inherit

html, button, input, select, textarea,
.pure-g [class *= "pure-u"]
  font-family: 'Open sans', sans-serif
  font-size: 14px

primary-color = #d55626
//#fc6500;
secondary-color = #f3a642

body
  font-family: 'Open sans', sans-serif
  background: 50% 70% url("assets/images/bg-timeline.png") no-repeat #d8d8d4
  overflow-x: hidden

h1,h2,h3,h4,h5,h6
  font-family: 'League Gothic'
  font-weight: normal


h2.title
  color: white
  font-size: 3.7em
  line-height: 1em
  margin: 0 0 0 0.8em

body #wrap
  margin-left: 0
  #header
    padding-bottom: 3em
  &.pagina-sem-header
    #header
      padding-bottom: 30px
    .box-call-to-action
      padding-top: 1.5em

p
  font-family: 'Open Sans', sans-serif

.page h1,
.post h1
  font-family: 'League Gothic'
  font-size: 38px
  line-height: 38px

.results-page
  margin-left: 3%

.warning-migration
  p
    background-color: #f0a630
    text-align: center
    font-weight: bold
    color: #4d5051

#comment-form h2
  font-size: 18px
  line-height: 18px
  margin: 0

.participacao,
.type-post
  width: 56em
  background: #fff
  margin-right: 0
  margin-top: 0
  margin-left: 3em
  float: left
  box-shadow: 2px 2px 6px 3px rgba(0, 0, 0, 0.33)
  overflow: hidden

.home #post-area .post
  margin-left: 0
  margin-top: 0
  margin-right: 1.5em
  p
    font-size: 12px
    line-height: 20px

#post-area
  margin-left: 2.5em

.white-popup-block
  background: #FFF
  padding: 20px 30px
  text-align: left
  max-width: 650px
  margin: 40px auto
  position: relative
  p
    margin: 0

.ie-warning
  background: #d56337
  text-align: center
  width: 100%
  float: left
  p
    color: #fff
    margin: .2em
    font-size: 1.3em
    a
      color: #fff

@import _menu

