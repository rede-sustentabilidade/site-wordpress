#rrssb-buttons
  width: 100%
  padding: 0
  margin: 0
  height: auto
  li
    padding: 0 0 0 5px
    width: 22px
    height: 22px
  svg
    width: 100%
    height: auto

/* Smartphones (portrait and landscape) ----------- */
@media only screen and (max-width: 480px)
  .single #meta-area+#post-area,
  .single #meta-area+#post-area+#nav-below,
  .single #meta-area+.post
    margin: 0

  #logo
    margin: 0 14px
  .extra-content
    margin-top: 0
  .fazer .fazer-doacao
    display: none

  .compartilhar-na-rede
    display: none


  aside
    display: none

  .container-meu-perfil
    width: auto

  #meta-area
    & + #post-area
      margin: 25px

    & + .post
      margin-right: 0

  .side-tabs
    display: none

  .type-page
    margin: 25px
    overflow: hidden

  .single #wrap
    margin-top: 0
    margin-bottom: 0

  .fazer
    margin: 0 25px

  .filie, .fazer-conexao
    margin: 0 0 10px 15px

  .site-footer .col
    height: auto

  .site-footer .col:first-child
    padding-left: 32px
    .social-network
      a
        margin: 0 25px 0 0
        i
          padding: 0
  .site-footer
    .notes
      i.icon-creative-commons
        margin-left: 0px
  .site-footer 
    .notes.social-network
       a
          height:0

